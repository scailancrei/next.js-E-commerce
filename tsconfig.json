{
  "compilerOptions": {
    "baseUrl": "src/app/",
    "paths": {
      "@/_components/*": ["_components/*"],
      "@/context/*": ["context/*"],
      "@/utils/*": ["utils/*"],
      "api/*": ["api/*"],
      "providers/*": ["providers/*"],
      "app/*": ["*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.ts",
    "src/app/register/register"
  ],
  "exclude": ["node_modules"]
}
